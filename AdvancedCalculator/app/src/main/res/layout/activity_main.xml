<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#100F0F"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/arkaplan"
    tools:ignore="InvalidId">

    <TextView
        android:id="@+id/hesaplama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:ems="10"
        android:hint="0"


        android:paddingTop="100dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="36dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#101010">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi7"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:hint="7"
                android:onClick="butonTik"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/sayi8"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:gravity="center"
                android:onClick="butonTik"
                android:text="8"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/sayi9"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:gravity="center"
                android:onClick="butonTik"
                android:text="9"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/carpi"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9500"
                android:gravity="center"
                android:onClick="buttonIslem"
                android:text="X"
                android:textSize="24sp"
                app:cornerRadius="100dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi4"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:gravity="center"
                android:hint="7"
                android:onClick="butonTik"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/sayi5"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:gravity="center"
                android:onClick="butonTik"
                android:text="5"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/sayi6"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:gravity="center"
                android:onClick="butonTik"
                android:text="6"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/cikarma"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9500"
                android:gravity="center"
                android:onClick="buttonIslem"
                android:text="-"
                android:textSize="24sp"
                app:cornerRadius="100dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:hint="7"
                android:onClick="butonTik"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/sayi2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:gravity="center"
                android:onClick="butonTik"
                android:text="2"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/sayi3"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:gravity="center"
                android:onClick="butonTik"
                android:text="3"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/toplam"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9500"
                android:gravity="center"
                android:onClick="buttonIslem"
                android:text="+"
                android:textSize="24sp"
                app:cornerRadius="100dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/temizle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:hint="7"
                android:onClick="temizle"
                android:text="AC"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/sayi0"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#505050"
                android:gravity="center"
                android:onClick="butonTik"
                android:text="0"
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/esittir"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:backgroundTint="#F44336"
                android:gravity="center"
                android:onClick="buttonHesapla"
                android:text="="
                android:textSize="24sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/bolu"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9500"
                android:gravity="center"
                android:text="/"
                android:textSize="34sp"
                app:cornerRadius="100dp"
                android:onClick="buttonIslem" />

        </TableRow>

    </TableLayout>
</LinearLayout>